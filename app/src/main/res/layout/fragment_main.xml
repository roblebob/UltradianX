<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.MainFragment"
    android:theme="@style/Theme.UltradianX.passive"
    >




    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/active_switch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height"
        android:elevation="15dp"
        android:backgroundTint="@color/transparent"
        android:contentDescription="@string/contentDescription_active_switch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/toOverviewButton"
        android:layout_width="66dp"
        android:layout_height="65dp"
        android:layout_margin="16dp"
        android:elevation="16dp"
        android:src="@drawable/tagesplan_reduced"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/contentDescription_toOverviewButton" />








</androidx.constraintlayout.widget.ConstraintLayout>